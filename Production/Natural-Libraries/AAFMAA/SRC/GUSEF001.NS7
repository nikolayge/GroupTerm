DEFINE FUNCTION FUNCTION-CODE-1-DESC RETURNS (A) DYNAMIC
DEFINE DATA
PARAMETER
1 #TABLE-CODE (A3)
1 #CODE       (A1)
LOCAL
1 J (I4)
1 CODES view of A-GEN-TABLE
  2 GEN-KEY                           (A4) /*    D
  2 GEN-SUB-KEY                       (A3)
  2 GEN-ALPHA-VALUE                   (A50)
  2 GEN-DESCRIPTION                   (A75)
  2 ADDL-INFO
1 #TABLE-KEY  (A7) 1 REDEFINE #TABLE-KEY
  2 #GEN-KEY         (A4)
  2 #SUB-KEY         (A3)

END-DEFINE

RESET FUNCTION-CODE-1-DESC
IF #CODE = ' '
  ESCAPE ROUTINE
END-IF

MOVE #TABLE-CODE TO #SUB-KEY
MOVE 'CODE' TO #GEN-KEY

FIND CODES WITH SEC-KEY = #TABLE-KEY
  IF SUBSTR(GEN-ALPHA-VALUE,1,1) = #CODE
    FUNCTION-CODE-1-DESC := ADDL-INFO
    ESCAPE BOTTOM
  END-IF
END-FIND

END-FUNCTION

