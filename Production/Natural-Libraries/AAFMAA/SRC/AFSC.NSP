  2 TERMINAL-ID   (A8)
  2 SECURITY-CODE (N2)
  2 CLERK-ID      (A3)
  2 INIT-USER     (A8)
  2 USER-COMPANY  (A1)                           /* DW1
1 #DISPLAY-EXECUTING-MSG (L) INIT <TRUE>  /* SAG-AB 20060801   DW2
*
END-DEFINE
*
SET CONTROL 'T+'                          /* SAG-AB 20070112           DW2
*
IF *DEVICE NE 'BATCH'                     /* SAG-AB 20060801 START     DW2
  CALLNAT 'USR1066N' #DISPLAY-EXECUTING-MSG
END-IF                                    /* SAG-AB 20060801 END
*
RESET #CGA-SCR-COMMAND
RESET #CGA-SCR-ID
RESET #CGA-SCR-SUFFIX
RESET #CGA-ORIG-COMMAND
RESET #CGA-ORIG-ID
RESET #CGA-ORIG-SUFFIX
RESET #CGA-ISN
RESET #CGA-ID-G
SET KEY CLR='@R'           /* REFRESH DISPLAY
*
MOVE *INIT-USER TO #INIT-USER              /* EDS logon ID
FIND (1) TERM-TM01 WITH TERMINAL-ID = #INIT-USER
  IF NO RECORDS FOUND
    INPUT
      // 'Access denied in PROGRAM "AFSC"'
      // 'EDS LOGON-ID not on AAFMAA Security File'
      // 'or LOGON-ID has been suspended'
      // 'or password needs reset'
      // 'Call 1-888-263-4337 to have your password reset'
    STACK COMMAND 'FIN'
    STOP
  END-NOREC
*
  MOVE *ISN TO #ISN
  MOVE SECURITY-CODE TO #CGA-SECURITY-CODE
  MOVE CLERK-ID TO #CGA-CLERK
END-FIND
*
IF #CGA-SECURITY-CODE = 1 OR = 2 OR = 97 OR = 98  /* AFFL General USER  /*DW3
  IGNORE
ELSE
  INPUT /// '"AFSC" is invalid for AAFMAA user'
        /// '"AAFM" should be used'
        /// 'This message is in program AFSC'
        /// 'Press enter then enter "AAFM'
  STACK COMMAND 'FIN'
  STOP
END-IF
*
* IF #CGA-SECURITY-CODE = 99                 /* EDS USER    /* DW3
*   MOVE 'B' TO #CGA-USER-COMPANY   /* both INS & SVC user
* ELSE
  MOVE 'S' TO #CGA-USER-COMPANY   /* SERVICE user
* END-IF
*
GET TERM-TM01 #ISN
*
MOVE #INIT-USER TO INIT-USER
MOVE 'S' TO TERM-TM01.USER-COMPANY   /* SET for SAS-USER            DW1
*
UPDATE (0084)
